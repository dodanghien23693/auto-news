
@section SPAViews {

<div id="CategoryTable" style="width: 100%; margin: auto;"></div>

}

@section Scripts{
    
    <link href="~/Scripts/jtable.2.4.0/themes/metro/blue/jtable.min.css" rel="stylesheet" />
    <script src="~/Scripts/jtable.2.4.0/jquery.jtable.min.js"></script>

    <script>
        $(document).ready(function () {
            
            $('#CategoryTable').jtable({
                title: 'Categories',
                actions: {
                    listAction: '/Crawler/GetAllCategory',
                    createAction: '/Crawler/CreateCategory',
                    updateAction: '/Crawler/UpdateCategory',
                    deleteAction: '/Crawler/DeleteCategory'
                },

                fields: {
                    Id: {
                        key: true,
                        list: false
                    },
                    Name: {
                        title: 'Tên',
                        width: '30%'
                    },

                    Description: {
                        title: 'Mô tả',
                        width: '30%'
                    }
                }
            });

            $('#CategoryTable').jtable('load');

    });
    </script>
}


