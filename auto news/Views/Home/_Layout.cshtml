<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Auto News</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Scripts/bootstrap-3.3.6-dist/css/bootstrap.min.css" rel="stylesheet" />
    @*@Styles.Render("~/Content/css")*@
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="row">
                <div class="navbar-header col-sm-3">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Auto news", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav col-sm-6">
                        <li style="margin-top:7px;width:100%">
                        <input style="width:100%" type="text" id="search-news-input" class="form-control" placeholder="Nhập từ khóa tìm kiếm" /></li>

                    </ul>
                    <div class="col-sm-3">
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()

    </div>
    <div class="container">

        <footer class="footer">
            <hr />
            <p>&copy; @DateTime.Now.Year - Auto News</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")

    <script src="~/Scripts/bootstrap-3.3.6-dist/js/bootstrap.min.js"></script>
   
    <script>
        
        $(document).ready(function () {
            try{
                $("#logoutForm input[name='returnUrl']").val(window.location);

                $("#loginLink").attr("href", "/account/login?returnUrl=" + window.location);
            }
            catch (e) {

            }
        });
    
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
